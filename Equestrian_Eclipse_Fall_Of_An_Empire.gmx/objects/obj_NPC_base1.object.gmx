                //Quest uncompleted
                with(obj_player)
                {
                    msg_case = 4;  //Case uncompleted
                    event_user(1); //Launch message system
                }
                
                show_debug_message("Quest " + quest_name + " still uncompleted.");
            }
        }
        else
        {
            //Quest will be assigned
            with(obj_player)
